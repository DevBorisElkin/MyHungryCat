<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Levels.Level_two"
    android:id="@+id/layout"
    android:background="@drawable/b1_minii">

    <ImageView
        android:id="@+id/cat"
        android:layout_width="82dp"
        android:layout_height="83dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.604"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.918"
        app:srcCompat="@drawable/hungry_cat" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="357dp"
        android:layout_height="11dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="13dp"
        android:max="2000"
        android:progress="0"
        android:progressDrawable="@drawable/custom_progressbar"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/cat_satisfaction"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/progressBar"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/progressBar"
        app:layout_constraintTop_toBottomOf="@+id/progressBar" />
    <ImageView
        android:id="@+id/restart"
        android:layout_width="50dp"
        android:layout_height="47dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_circle_3"
        android:elevation="5dp"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        app:srcCompat="@drawable/restart" />

    <ImageView
        android:id="@+id/graffiti"
        android:layout_width="211dp"
        android:layout_height="162dp"
        android:layout_marginBottom="96dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/trb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.875"
        app:layout_constraintStart_toStartOf="@+id/trb"
        app:srcCompat="@drawable/graffiti" />

    <ImageView
        android:id="@+id/bigFish"
        android:layout_width="76dp"
        android:layout_height="38dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/trb"
        app:layout_constraintEnd_toEndOf="@+id/trb"
        app:layout_constraintTop_toTopOf="@+id/trb"
        app:layout_constraintVertical_bias="0.887"
        app:srcCompat="@drawable/big_fish" />

    <ImageView
        android:id="@+id/trb"
        android:layout_width="119dp"
        android:layout_height="170dp"
        android:layout_marginBottom="88dp"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toTopOf="@+id/cat"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/trash_bin" />

    <ImageView
        android:id="@+id/fish1"
        android:layout_width="53dp"
        android:layout_height="50dp"
        android:layout_marginEnd="80dp"
        app:layout_constraintEnd_toStartOf="@+id/cat"
        app:layout_constraintTop_toTopOf="@+id/cat"
        app:srcCompat="@drawable/fish" />

    <ImageView
        android:id="@+id/banana_skin"
        android:layout_width="67dp"
        android:layout_height="67dp"
        android:layout_marginBottom="52dp"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toTopOf="@+id/cat"
        app:layout_constraintStart_toStartOf="@+id/cat"
        app:srcCompat="@drawable/banana_skin" />

    <ImageView
        android:id="@+id/spray"
        android:layout_width="28dp"
        android:layout_height="64dp"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="52dp"
        app:layout_constraintBottom_toTopOf="@+id/cat"
        app:layout_constraintStart_toEndOf="@+id/cat"
        app:srcCompat="@drawable/spray" />

    <ImageView
        android:id="@+id/fish2"
        android:layout_width="53dp"
        android:layout_height="50dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toEndOf="@+id/cat"
        app:layout_constraintTop_toTopOf="@+id/cat"
        app:srcCompat="@drawable/fish" />


</android.support.constraint.ConstraintLayout>