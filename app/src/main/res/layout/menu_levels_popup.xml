<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    >


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="@color/yellowNotif2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        app:cardPreventCornerOverlap="false"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                >

                <TextView
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="1dp"
                    android:text="@string/choose_level"
                    android:textSize="29sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/comicrelief"
                    android:textColor="@color/InfoColor2"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_marginTop="9dp"
                    android:layout_height="2dp"
                    android:background="@color/Orange2"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/yellowNotif4"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        >

                        <Button
                            android:id="@+id/level_1"
                            style="@style/levelsMenuButton"
                            android:background="@drawable/round_button"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="1"
                            android:textColor="#fff"
                            android:fontFamily="@font/comicrelief"/>

                        <Button
                            android:id="@+id/level_2"

                            style="@style/levelsMenuButton"
                            android:background="@drawable/round_button"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="2"
                            android:textColor="#fff"
                            android:fontFamily="@font/comicrelief"
                            />

                        <Button
                            android:id="@+id/level_3"

                            style="@style/levelsMenuButton"
                            android:background="@drawable/round_button"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="3"
                            android:textColor="#fff"
                            android:fontFamily="@font/comicrelief"
                            />
                        <Button
                            android:id="@+id/level_4"

                            style="@style/levelsMenuButton"
                            android:background="@drawable/round_button"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="4"
                            android:textColor="#fff"
                            android:fontFamily="@font/comicrelief"/>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp">

                        <Button
                            android:id="@+id/level_5"
                            style="@style/levelsMenuButton"
                            android:background="@drawable/round_button"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="5"
                            android:textColor="#fff" />
                        <Button
                            android:id="@+id/level_6"
                            style="@style/levelsMenuButton"
                            android:background="@drawable/round_button"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="6"
                            android:textColor="#fff"
                            android:fontFamily="@font/comicrelief"/>

                        <Button
                            style="@style/levelsMenuButton"
                            android:background="@drawable/round_button_dev"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="7"
                            android:textColor="#fff"
                            android:id="@+id/level_7"
                            android:fontFamily="@font/comicrelief"/>
                        <Button
                            style="@style/levelsMenuButton"
                            android:background="@drawable/round_button_dev"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="8"
                            android:textColor="#fff"
                            android:id="@+id/level_8"
                            android:fontFamily="@font/comicrelief"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp">

                        <Button
                            style="@style/levelsMenuButton"
                            android:background="@drawable/round_button_dev"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="9"
                            android:textColor="#fff"
                            android:id="@+id/level_9"
                            android:fontFamily="@font/comicrelief"/>
                        <Button
                            style="@style/levelsMenuButton"
                            android:background="@drawable/round_button_dev"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="10"
                            android:textColor="#fff"
                            android:id="@+id/level_10"
                            android:fontFamily="@font/comicrelief"/>
                        <Button
                            style="@style/levelsMenuButton"
                            android:background="@drawable/round_button_dev"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="11"
                            android:textColor="#fff"
                            android:id="@+id/level_11"
                            android:fontFamily="@font/comicrelief"/>
                        <Button
                            style="@style/levelsMenuButton"
                            android:background="@drawable/round_button_dev"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="12"
                            android:textColor="#fff"
                            android:id="@+id/level_12"
                            android:fontFamily="@font/comicrelief"/>


                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"

                    android:layout_height="2dp"
                    android:background="@color/Orange2"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="3dp"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/awdf"
                            style="@style/levelsMenuButton"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/round_button_blocked"
                            android:gravity="center_vertical|center_horizontal"
                            android:text=""
                            android:textColor="#fff" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/level_is_locked"
                            android:textAlignment="center"
                            android:textColor="@color/InfoColor2"
                            android:textStyle="bold"
                            android:fontFamily="@font/comicrelief"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/awdfw"
                            style="@style/levelsMenuButton"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/round_button_dev"
                            android:gravity="center_vertical|center_horizontal"
                            android:text=""
                            android:textColor="#fff" />

                        <TextView
                            android:id="@+id/textView4d"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/level_is_in_development"
                            android:textAlignment="center"
                            android:textColor="@color/InfoColor2"
                            android:textStyle="bold"
                            android:fontFamily="@font/comicrelief"/>
                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/close"
                    style="@style/button_margin_style2"
                    android:layout_width="137dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="@string/close"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:fontFamily="@font/comicrelief"/>



            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>