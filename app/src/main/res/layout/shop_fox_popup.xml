<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    >


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="@color/Orange1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        app:cardPreventCornerOverlap="false"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="@string/fox_little_shop"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="@color/InfoColor"
                    android:fontFamily="@font/comicrelief"/>

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginStart="24dp"
                    android:text="@string/here_you_can_choose_items_you_want_to_buy_each_item_can_be_bought_only_certain_amount_of_times"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:fontFamily="@font/comicrelief"
                    android:textColor="@color/InfoColor"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="6dp">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="4dp"
                        android:text="@string/your_money"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/comicrelief"
                        android:textColor="@color/InfoColor"/>

                    <TextView
                        android:id="@+id/currentMoneyTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="4dp"
                        android:text="0"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/comicrelief"
                        android:textColor="@color/InfoColor"/>

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="35dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/coin"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/Orange4"
                    />


                <ScrollView
                    android:id="@+id/scrollView"
                    style="@android:style/Widget.Material.Light.ScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:scrollbarStyle="outsideOverlay"
                    android:visibility="visible"
                    android:background="@color/Orange2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="6dp"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/left_count1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginEnd="2dp"
                                android:layout_marginStart="12dp"
                                android:text="1 X "
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/comicrelief"
                                android:textColor="@color/InfoColor"/>

                            <ImageView
                                android:id="@+id/item1"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_gravity="center"
                                android:background="@drawable/shop_item_fox_available"
                                android:padding="10dp"
                                app:srcCompat="@drawable/sleeping_drug" />

                            <TextView
                                android:id="@+id/price1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginEnd="2dp"
                                android:layout_marginStart="12dp"
                                android:text="10"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/comicrelief"
                                android:textColor="@color/InfoColor"/>

                            <ImageView
                                android:id="@+id/coinPicture1"
                                android:layout_width="35dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/coin" />

                            <Button
                                android:id="@+id/buttonBuy1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="7dp"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="3dp"
                                android:background="@drawable/shop_item_fox_available"
                                android:elevation="3dp"
                                android:text="@string/buy"
                                android:textStyle="bold"
                                android:fontFamily="@font/comicrelief"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/left_count1d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginEnd="2dp"
                                android:layout_marginStart="12dp"
                                android:text=" 0 X "
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/comicrelief"
                                android:textColor="@color/InfoColor"/>

                            <ImageView
                                android:id="@+id/item1d"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_gravity="center"
                                android:background="@drawable/shop_item_fox_available"
                                android:padding="10dp"
                                app:srcCompat="@drawable/tuna_can" />

                            <TextView
                                android:id="@+id/price1d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginEnd="2dp"
                                android:layout_marginStart="12dp"
                                android:text="14"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/comicrelief"
                                android:textColor="@color/InfoColor"/>

                            <ImageView
                                android:id="@+id/coinPicture1d"
                                android:layout_width="35dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/coin" />

                            <Button
                                android:id="@+id/buttonBuy1d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="7dp"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="3dp"
                                android:background="@drawable/shop_item_owl_unavailable"
                                android:elevation="3dp"
                                android:text="@string/buy"
                                android:textStyle="bold"
                                android:fontFamily="@font/comicrelief"
                               />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/left_count3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginEnd="2dp"
                                android:layout_marginStart="12dp"
                                android:text="1 X "
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/comicrelief"
                                android:textColor="@color/InfoColor"/>

                            <ImageView
                                android:id="@+id/itemYw"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_gravity="center"
                                android:background="@drawable/shop_item_fox_available"
                                android:padding="10dp"
                                app:srcCompat="@drawable/chicken_leg" />

                            <TextView
                                android:id="@+id/price3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginEnd="2dp"
                                android:layout_marginStart="12dp"
                                android:text="11"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/comicrelief"
                                android:textColor="@color/InfoColor"/>

                            <ImageView
                                android:id="@+id/coinPicture3"
                                android:layout_width="35dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/coin" />

                            <Button
                                android:id="@+id/buttonBuy3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="7dp"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="3dp"
                                android:background="@drawable/shop_item_fox_available"
                                android:elevation="3dp"
                                android:text="@string/buy"
                                android:textStyle="bold"
                                android:fontFamily="@font/comicrelief"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/left_count2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginEnd="2dp"
                                android:layout_marginStart="12dp"
                                android:text="1 X "
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/comicrelief"
                                android:textColor="@color/InfoColor"/>

                            <ImageView
                                android:id="@+id/itemY"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_gravity="center"
                                android:background="@drawable/shop_item_fox_available"
                                android:padding="10dp"
                                app:srcCompat="@drawable/dynamite_cut" />

                            <TextView
                                android:id="@+id/price2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginEnd="2dp"
                                android:layout_marginStart="12dp"
                                android:text="50"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/comicrelief"
                                android:textColor="@color/InfoColor"/>

                            <ImageView
                                android:id="@+id/coinPictureY"
                                android:layout_width="35dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/coin" />

                            <Button
                                android:id="@+id/buttonBuy2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="7dp"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="3dp"
                                android:background="@drawable/shop_item_fox_available"
                                android:elevation="3dp"
                                android:text="@string/buy"
                                android:textStyle="bold"
                                android:fontFamily="@font/comicrelief"
                            />
                        </LinearLayout>


                    </LinearLayout>
                </ScrollView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/Orange4"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/close_shop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="50"
                        android:background="@drawable/shop_item_fox_available"
                        android:paddingEnd="25dp"
                        android:paddingStart="25dp"
                        android:layout_marginStart="95dp"
                        android:layout_marginEnd="95dp"
                        android:text="@string/close_shop"
                        android:fontFamily="@font/comicrelief"
                        android:textStyle="bold"

                        />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>